{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "declaration": true,
        "typeRoots": ["src/@types", "./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    }
}
